<% include partials/header %>
<div class="container">
    <div class="row">
        <h1>Adicionar Mensalista</h1>
        
        <div style="width:30%; margin: 0 auto;">
        
        <form action="/mensalistas" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="player[name]" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="player[skill]" placeholder="Habilidade 1-5">
            </div>
            <div class="form-group">
                <input type="checkbox" name="player[goalkeeper]" value="true"> Goleiro<br>
                
            </div>    
            <div class="form-group">
                <button class="btn btn-lg btn-default">Adicionar</button>
            </div>
        </form>
        <a href="/mensalistas">voltar</a>
    </div>
</div>

<% include partials/footer %>