<% include partials/header %>

<div class="container">
    <div class="container">
        <div class="row">
            <a class="btn btn-primary btn-lg" href="/events/new">Adicionar Diarista</a>
            <a class="btn btn-primary btn-lg" href="/sortear">Sortear</a>
        <div>
    </div>
    <br>
<header class="jumbotron">
    <div class="container">
        <div align="center">
            <h1>Lista diaria</h1>
        </div>
        
        <table class="table table-hover table-bordered">
			<!--
			<thead>	
				<tr>
					<th>Nome</th>
					<th>Habilidade</th>
					<th>Mensalista</th>
					<th>Confirmado</th>
				</tr>
			</thead>
			-->
			<tbody>
			    <% var myNumber = 0; %>
                <% events.forEach(function(event){ %>
                    <tr>
                        <% myNumber++; %>
                        <% var formattedNumber = ("0" + myNumber).slice(-2); %>
                        
                        <td><%= formattedNumber  %></td>
                        <td>
                            <% if ( event.goalkeeper == "1") { %>
        				        <i class="em em-hand"></i>
        				    <% } %>
                        </td>
        			    <td><%= event.player  %></td>
        				<td><%= event.skill %></td>
        				<td><% if( event.monthly) { %>
        				    <div class="centered"><span class="glyphicon glyphicon-calendar"></span></div>
        				    <% } else { %>
        				    <div class="centered"><span class="glyphicon glyphicon-time"></span></div>
        				    <% } %>
        				</td>
        				<td><% if ( event.confirmed === 0) { %>
        				        <i class="em em-heavy_exclamation_mark"></i> 
        				    <% } else if ( event.confirmed === 1)  { %>
        				        <i class="em em-white_check_mark"></i>
        				    <% } else if (event.confirmed === 2) { %>
        				        <i class="em em-x"></i>
        				    <% } %>
        				    
        				    
        				    <form action="/events/<%= event._id %>?_method=PUT" method="POST">
                                <input type="hidden" name="event[confirmed]" value="1">
                                <button class="ui violet basic button">Vou</button>
                            </form>
                            
                            <form action="/events/<%= event._id %>?_method=PUT" method="POST">
                                <input type="hidden" name="event[confirmed]" value="2">
                                <button class="ui violet basic button">NÃ£o</button>
                            </form>
        				</td>
        				<td><%= event.team  %></td>
        				<td><a href="/events/<%=event._id%>/edit"><i class="em em-pencil"></a></i></td>
        			</tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</header>
    <div class="container">
        <div class="row">
            <a class="btn btn-primary btn-lg" href="/events/new">Adicionar Diarista</a>
            <a class="btn btn-primary btn-lg" href="/sortear">Sortear</a>
        <div>
    </div>
    <br><br>
</div>

<% include partials/footer %>